{
  "name": "discours-editor-app",
  "version": "0.0.2",
  "description": "Collaborative p2p publishing tool",
  "main": "dist/index.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "web": "vite serve",
    "lint": "eslint . --ext .ts,.tsx",
    "fix": "eslint --fix --ignore-path .gitignore src/**/*.{ts,tsx}",
    "format": "prettier --ignore-path .gitignore --write src",
    "prepare": "npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npm-run-all -p test:unit:*",
    "test:unit:client": "TEST_ENV=client TEST_MODE=client vitest run",
    "test:unit:client-server": "TEST_ENV=client TEST_MODE=client-server vitest run",
    "test:unit:server": "TEST_ENV=server TEST_MODE=server vitest run",
    "test:e2e": "CI=true vitest && npx playwright test"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.20.1",
    "@popperjs/core": "^2.11.2",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "bootstrap": "^5.1.3",
    "date-fns": "^2.28.0",
    "eslint": "^8.9.0",
    "eslint-config-stylelint": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-solid": "^0.4.4",
    "file-type": "^17.1.1",
    "idb": "^7.0.1",
    "jsdom": "^19.0.0",
    "markdown-it": "^12.3.2",
    "markdown-it-container": "^3.0.0",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-replace-link": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "prosemirror-commands": "^1.2.2",
    "prosemirror-dropcursor": "^1.4.0",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-gapcursor": "^1.2.2",
    "prosemirror-history": "^1.2.0",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.5",
    "prosemirror-markdown": "^1.8.0",
    "prosemirror-model": "^1.16.1",
    "prosemirror-schema-list": "^1.1.6",
    "prosemirror-state": "^1.3.4",
    "prosemirror-transform": "^1.4.0",
    "prosemirror-view": "^1.23.10",
    "sass": "^1.49.9",
    "solid-js": "^1.3.12",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.6.2",
    "unique-names-generator": "^4.7.1",
    "uuid": "^8.3.2",
    "vite": "^2.8.6",
    "vite-plugin-solid": "^2.2.6",
    "vitest": "^0.7.11",
    "y-prosemirror": "^1.0.15",
    "y-protocols": "^1.0.5",
    "y-webrtc": "^10.2.2",
    "yjs": "^13.5.28"
  }
}
